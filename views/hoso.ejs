   <div class="container">
    <h1>Đăng ký thông tin thú cưng</h1>
    <form action="#" method="post">
        <label for="pet-name">Tên thú cưng:</label>
        <input type="text" id="pet-name" name="pet-name" required style="width:400px; height: 30px">

        <label for="pet-type" style="margin-top:10px">Loài:</label>
        <input type="text" id="pet-type" name="pet-type" required style="width:400px; height: 30px">

        <label for="pet-birthdate" style="margin-top:10px">Ngày sinh:</label>
        <input type="date" id="pet-birthdate" name="pet-birthdate" required style="width:400px">

        <label for="pet-health">Tình trạng sức khỏe:</label>
        <select id="pet-health" name="pet-health" required style="height:30px">
            <option value="healthy">Khỏe mạnh</option>
            <option value="normal">Bình thường</option>
            <option value="weak">Yếu</option>
        </select>

        <label for="phone-number" style="margin-top:10px">Số điện thoại:</label>
        <input type="text" id="phone-number" name="phone-number" required pattern="[0-9]{10}" title="Số điện thoại phải gồm 10 chữ số" style="width:400px; height: 30px">


        <label for="owners-email">Email chủ thú cưng:</label>
        <input type="email" id="owners-email" name="owners-email" required style="height:30px; width:400px">

        <input type="checkbox" id="add-to-mailing-list" name="add-to-mailing-list" value="true">
        <br/>

        <input type="submit" value="Lưu thông tin">
    </form>
